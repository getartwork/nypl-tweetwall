<li>
  <div class="content-item thumbnail">
    <%= image_tag(content_item.thumbnail_url, :alt  => content_item.title) %>
    <h3><%= link_to(content_item.title, content_item.url) %></h3>
    <ul>
      <% content_item.tweets.each do |tweet| %>
        <%= render :partial => "tweet", :locals => {:tweet => tweet} %>
      <% end %>
    </ul>
  </div>
</li>
